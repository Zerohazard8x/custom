:root {
    /* Define variables */
    --font: "IBM Plex Sans JP", "IBM Plex Sans Thai", "IBM Plex Sans",
        -apple-system, BlinkMacSystemFont, "SF Pro", "SF Pro Text", "Inter",
        "Roboto";
}

@-moz-document domain("youtube.com") {
    /* youtube - Goal: subtitles */
    /* Class ytp-caption-segment  */
    .ytp-caption-segment {
        font-family: var(--font), "YouTube Noto", Roboto, "Arial Unicode Ms",
            Arial, Helvetica, Verdana, "PT Sans Caption", sans-serif !important;
        color: #fff000 !important;
        text-shadow: #000000 0 0 5px, #000000 0 0 5px, #000000 0 0 5px !important; /* #000000 shadow with x and y offsets of 0 and blur radius 5px applied 3 times */
    }

    .captions-text {
        line-height: 350% !important;
    }
}

