@-moz-document domain("nitter.net"), domain("nitter.riverside.rocks"), domain("nitter.tiekoetter.com"), domain("twt.funami.tech") {
    /* Nitter - goal: change all fonts */
    .container,
    .tweet-content,
    .site-name,
    button,
    select,
    input {
        font-family: var(--font), sans-serif !important;
    }
}

@-moz-document domain("inv.riverside.rocks"), domain("invidious.tiekoetter.com"), domain("yt.funami.tech"), domain("yewtu.be") {
    /* Invidious - goal: change all fonts */
    #searchbox,
    .feed-menu,
    .h-box,
    .pure-menu-heading,
    .pure-u-14-24,
    .pure-u-20-24,
    .pure-u-23-24,
    .pure-u-10-24 {
        font-family: var(--font), sans-serif !important;
    }
}

@-moz-document domain("deepl.com") {
    /* DeepL - Goal: Replace Segoe font */
    body *:not(.fa) {
        font-family: var(--font), -apple-system, BlinkMacSystemFont, "Segoe UI",
            Roboto, Helvetica, Arial, sans-serif !important;
    }
}

@-moz-document domain("cagematch.net") {
    /* Cagematch - Goal: Reduce usage of Arial font */
    .TemplateBody,
    .HeaderMenu,
    .RatingsBoxAdjustedRating,
    input {
        font-family: var(--font), Arial, "Segoe UI", Frutiger,
            "Frutiger Linotype", "Dejavu Sans", "Helvetica Neue", sans-serif !important;
    }
}

@-moz-document domain("quora.com") {
    /* Quora - Goal: Reduce usage of system font */
    .q-box {
        font-family: var(--font), -apple-system, system-ui, BlinkMacSystemFont,
            "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue",
            sans-serif !important;
    }
}

@-moz-document domain("steampowered.com") {
    /* Steam - goal: reduce usage of Arial font, grayscale */
    #game_area_metascore > div,
    #queueActionsCtn,
    #review_context,
    #reviews_filter_language,
    .block_header > div,
    .flyout,
    .game_area_sys_req strong,
    .game_page_autocollapse_readmore,
    .rightcol,
    .store_nav,
    .store_horizontal_minislider,
    .tab_review_summary,
    div > a,
    #footer_text {
        font-family: "Motiva Sans", Arial, Helvetica, sans-serif !important;
    }

    /* grayscale */
    div.miniprofile_hover,
    div.responsive_page_frame.with_header,
    div.FullModalOverlay {
        filter: grayscale(80%);
    }
}