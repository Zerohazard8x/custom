    .container-title {
        font-family: var(--font-display) !important;
        filter: opacity(100%) !important;
    }

    .scs_cpr > h2 {
        font-family: "Segoe UI Variable Display", "Segoe UI", SegoeUI, Segoe, "Roboto", Helvetica, sans-serif !important;
        filter: opacity(100%) !important;
    }
    
    /* Variable Small */
    #actionbar,
    #imagemeta,
    .b_footnote,
    .b_vPanel,
    .caption-2-strong,
    .cmab,
    .cpyrtc,
    .infpd a,
    .irsb,
    .irstp,
    .l_ecrd_ftr_txt,
