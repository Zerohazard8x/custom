:root {
    /* Define variables */
    --font: "IBM Plex Sans JP", "IBM Plex Sans Thai", "IBM Plex Sans",
        -apple-system, BlinkMacSystemFont, "SF Pro", "SF Pro Text", "Inter",
        "Roboto";
    --monospace: "Fira Code", "Fira Mono", "Noto Mono", "Noto Sans Mono",
        "DroidSansM", "Hack", "Bitstream Vera Sans Mono", "BitstromVera",
        "DejaVu Sans Mono", "Segoe UI Mono", "SF Mono", "SFMono-Regular", Menlo,
        Monaco, "Ubuntu Mono", "Consolas", "Andale Mono", "Lucida Console",
        "Lucida Sans Typewriter", "Source Code Pro";
    --block-mono: "JetBrains Mono", "JetBrains Mono NL", "Input Mono",
        "IBM Plex Mono", "BlexMono", "Roboto Mono", "Iosevka Expanded",
        "Iosevka", "Input Sans", "Liberation Mono";
}

@-moz-document domain("github.com") {
    /* Github - Goal: Change all fonts, change font and formatting of code blocks, grayscale */
    .page-responsive,
    .Box-sc-g0xbh4-0,
    .Dialog__Footer-sc-uaxjsn-6,
    .my-3,
    .d-block,
    section,
    details,
    blockquote,
    .container-lg {
        font-family: var(--font), -apple-system, BlinkMacSystemFont, "Segoe UI",
            "Noto Sans", Helvetica, Arial, sans-serif, "Apple Color Emoji",
            "Segoe UI Emoji" !important;
    }

    #commit-summary-input,
    .blob-code-inner,
    .blob-num,
    .branch-name,
    .diffstat,
    .file-info,
    .sha,
    .sha-block,
    .text-mono,
    .input-monospace,
    .BranchName-sc-sg8jsy-0,
    .markdown-body pre,
    kbd,
    code,
    .commit-desc > pre {
        font-family: var(--monospace), var(--block-mono), Consolas, monospace !important;

        /* Ligatures */
        font-variant-ligatures: common-ligatures, contextual !important;
        font-feature-settings: "liga" 1, "calt" 1 !important;

        /* -webkit-font-feature-settings: "liga", "calt" !important;
        -moz-font-feature-settings: "liga", "calt" !important;
        -o-font-feature-settings: "liga", "calt" !important; */
    }

    .blob-code-inner,
    .blob-num,
    .markdown-body pre,
    .markdown-body code {
        font-size: 16px !important;
    }

    div.logged-in.env-production.page-responsive.full-width,
    div.sr-only {
        filter: grayscale(80%);
    }
}

